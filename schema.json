  /api/accounts/user-management/:
    get:
      operationId: api_accounts_user_management_list
      description: USER endpoint with nested profile.
      parameters:
      - in: query
        name: email_verified
        schema:
          type: boolean
        description: 'Filter by email verification status (true/false). Note: ignored
          when user_status is used'
      - in: query
        name: has_deactivation_time
        schema:
          type: boolean
        description: Filter users with deactivation time set (true/false)
      - in: query
        name: is_active
        schema:
          type: boolean
        description: 'Filter by active status (true/false). Note: ignored when user_status
          is used'
      - in: query
        name: must_set_password
        schema:
          type: boolean
        description: 'Filter by authorization status - true=not authorized, false=authorized.
          Note: ignored when user_status is used'
      - in: query
        name: order_direction
        schema:
          type: string
        description: 'Order direction: asc (ascending) or desc (descending). Default:
          asc'
      - in: query
        name: ordering
        schema:
          type: string
        description: 'Order results by field: first_name, last_name, email, date_joined,
          last_login, role, is_active, email_verified'
      - name: page
        required: false
        in: query
        description: A page number within the paginated result set.
        schema:
          type: integer
      - in: query
        name: page_size
        schema:
          type: integer
        description: Number of results per page (max 100)
      - in: query
        name: role
        schema:
          type: string
        description: 'Filter by user role. Options: student, teacher, assistant, manager,
          admin'
      - in: query
        name: search
        schema:
          type: string
        description: Search in first_name, last_name, email, and phone_number
      - in: query
        name: user_status
        schema:
          type: string
        description: 'Filter by predefined user status. Options: authorized, not_authorized,
          deactivated'
      tags:
      - Admin - Users Management
      security:
      - jwtAuth: []
      - BearerAuth: []
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/PaginatedAdminUserReadList'
          description: ''
