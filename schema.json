components:
  schemas:
    ActionEnum:
      enum:
      - activate
      - deactivate
      - unauthorize
      type: string
      description: |-
        * `activate` - Activate
        * `deactivate` - Deactivate
        * `unauthorize` - Unauthorize
    AddStudents:
      type: object
      properties:
        user_ids:
          type: array
          items:
            type: integer
      required:
      - user_ids
    AddTeacher:
      type: object
      properties:
        teacher_id:
          type: integer
          writeOnly: true
      required:
      - teacher_id
    AdminCreateUser:
      type: object
      properties:
        email:
          type: string
          format: email
          maxLength: 254
        first_name:
          type: string
          maxLength: 150
        last_name:
          type: string
          nullable: true
          maxLength: 100
        role:
          $ref: '#/components/schemas/RoleFcaEnum'
        profile:
          $ref: '#/components/schemas/AdminProfileNestedCreate'
      required:
      - email
      - role
    AdminProfileNestedCreate:
      type: object
      properties:
        middle_name:
          type: string
          nullable: true
          maxLength: 120
        interface_language:
          type: string
          maxLength: 10
        timezone:
          type: string
          maxLength: 64
        birth_date:
          type: string
          format: date
          nullable: true
        phone_number:
          type: string
          nullable: true
          maxLength: 20
        company:
          type: string
          nullable: true
          maxLength: 100
        profile_photo:
          type: string
          format: uri
          nullable: true
          pattern: (?:jpg|jpeg|png)$
        deactivation_time:
          type: string
          format: date-time
          nullable: true
        days_to_delete:
          type: integer
          maximum: 2147483647
          minimum: 0
          nullable: true
        profile_edit_blocked:
          type: boolean
    AdminProfileRead:
      type: object
      properties:
        interface_language:
          type: string
          maxLength: 10
        timezone:
          type: string
          maxLength: 64
        birth_date:
          type: string
          format: date
          nullable: true
        profile_edit_blocked:
          type: boolean
        deactivation_time:
          type: string
          format: date-time
          nullable: true
        days_to_delete:
          type: integer
          maximum: 2147483647
          minimum: 0
          nullable: true
        phone_number:
          type: string
          nullable: true
          maxLength: 20
        company:
          type: string
          nullable: true
          maxLength: 100
        profile_photo:
          type: string
          format: uri
          nullable: true
          pattern: (?:jpg|jpeg|png)$
        updated_at:
          type: string
          format: date-time
          readOnly: true
      required:
      - updated_at
    AdminProfileWrite:
      type: object
      properties:
        middle_name:
          type: string
          nullable: true
          maxLength: 120
        interface_language:
          type: string
          maxLength: 10
        timezone:
          type: string
          maxLength: 64
